<!-- radio selectors -->
<div class="selector-div">
  <ul class="left-filter-pane">
    <li class="nav-buttons-right" id="radio">
      <a id="filter"> Filter Results </a>
    </li>
    <li class="nav-buttons-right" id="radio">
      <hr id="divider">
      <!-- an hr vertical divider -->
    </li>
    <li class="nav-buttons-right number" id="radio">
      <span id="num-dealers">{{number}}</span> dealers in 28226
    </li>
  </ul>

  {{!-- radio selectors --}}
  <div class="right-filter-pane">
    <a href="/service" class="radio-link" role="button">
      <label for="service">Service</label>
    </a>
    <a href="/installation" class="radio-link" role="button">
      <label for="installation">Installation</label>
    </a>
    <a href="/residential" class="radio-link" role="button">
      <label for="residential">Residential</label>
    </a>
    <a href="/commercial" class="radio-link" role="button">
      <label for="commercial">Commercial</label>
    </a>
    <a href="/all" class="radio-link" role="button">
      <label for="all">All</label>
    </a>
  </div>
</div>
{{!-- bussiness cards --}} {{#each business}}

<div id="main-container" class="container">
  {{#each this}}
  <section class="main-section">
    {{!-- company name --}}
    <h1 class="company-name">{{this.data.name}}</h1>
    <hr class="card-top-divider"> {{!-- phone --}}
    <div class="phone-div">
      <span class="phone-logo"> ☎︎ </span>
      <div class="phone">{{this.data.phone1}}</div>
    </div>
    {{!-- message --}}
    <p class="cant-talk">Cant talk now? Click below to send an email.</p>
    <!-- email box -->
    <div class="email">
      <a href="mailto:{{this.data.email}}"> ✉️ Contact this pro </a>
    </div>
    <div class="business">
      <p class="business-header">Business Hours</p>
      <span class="business-hours">
        <p>Weekdays -
          <span>{{this.data.weekHours.mon}}</span>
        </p>
        <p>Saturdays -
          <span>{{this.data.weekHours.sat}}</span>
        </p>
        <p>Sundays -
          <span>{{this.data.weekHours.sun}}</span>
        </p>
      </span>
    </div>
    <br>
    <div class="card-footer">
      <div class="certifications">{{this.data.certifications}}</div>
    </div>
  </section>
  {{/each}}

  <div>
    {{certificate}}
  </div>
</div>
{{/each}}