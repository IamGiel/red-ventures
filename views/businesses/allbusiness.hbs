<!-- business cards contents -->

<!-- radio selectors -->
<div class="selector-div">
  <ul class="filter-pane">
    <li class="nav-buttons-right" id="radio">
      <a id="filter"> Filter Results </a>
    </li>
    <li class="nav-buttons-right" id="radio">
      <hr id="divider">
      <!-- an hr vertical divider -->
    </li>
    <li class="nav-buttons-right" id="radio">
      <span id="num-dealers">{{number}}</span> dealers in 28226
    </li>
  </ul>

{{!-- radio selectors --}}
  <ul class="filter-pane">
    <li class="nav-buttons-right radio-btn">
      <input class="input" type="radio" name="option" value="Service"> Service
    </li>
    <li class="nav-buttons-right radio-btn">
      <input class="input" type="radio" name="option" value="Installation"> Installation
    </li>
    <li class="nav-buttons-right radio-btn">
      <input class="input" type="radio" name="option" value="Residential" > Residential
    </li>
    <li class="nav-buttons-right radio-btn">
      <input class="input" type="radio" name="option" value="Commercial"> Commercial
    </li>
    <li class="nav-buttons-right radio-btn">
      <input class="input" type="radio" name="option" value="All" > All
    </li>
  </ul>
</div>

{{!-- bussiness cards --}} {{#each business}}

<div id="main-container" class="container">
  {{#each this}}
  <section class="main-section">
    {{!-- company name --}}
    <h1 class="company-name">{{this.data.name}}</h1>
    <hr class="card-top-divider"> {{!-- phone --}}
    <div>
      <span class="phone-logo"> ☎︎ </span>
      <div class="phone">{{this.data.phone1}}</div>
    </div>
    {{!-- message --}}
    <p class="cant-talk">Cant talk now? Click below to send an email.</p>
    <!-- email box -->
    <div class="email">
      <a href="mailto:{{this.data.email}}"> ✉️ Contact this pro </a>
    </div>
    <div class="business">
      <p class="business-header">Business Hours</p>
      <span class="business-hours">
        <p>Weekdays -
          <span>{{this.data.weekHours.mon}}</span>
        </p>
        <p>Saturdays -
          <span>{{this.data.weekHours.sat}}</span>
        </p>
        <p>Sundays -
          <span>{{this.data.weekHours.sun}}</span>
        </p>
      </span>
    </div>
    <br>
    <div class="card-footer">
      <div class="certifications">{{this.data.certifications}}</div>
    </div>
  </section>
  {{/each}}

  <div>
    {{certificate}}
  </div>
</div>
{{/each}}